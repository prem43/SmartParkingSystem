@model ParkingLotsDTO

<div class="container mt-4">
    <h2>Create Parking Lot</h2>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Location" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Total Slots</label>
            <input asp-for="TotalSlots" class="form-control" type="number" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Available Slots</label>
            <input asp-for="AvailableSlots" class="form-control" type="number" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
